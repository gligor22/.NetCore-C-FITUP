@model FitUp.Domain.DTO.PaymentDTO2

@{
    ViewData["Title"] = "Create";
}

<section class="vh-100">
  <div class="">
    <div class="row d-flex justify-content-center align-items-center mt-5">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-4">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <form class="mx-1 mx-md-4" asp-action="Create">
                  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                  <div class="d-flex flex-row align-items-center mb-4 mt-2">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <label asp-for="Payed_Price" class="control-label">Payment Price</label>
                <select asp-for="Payed_Price" class ="form-control">
                    <option value="1800">1800 mkd --- 3 sesions</option>
                    <option value="2000">2000 mkd --- 4 sesions</option>
                    <option value="2200">2200 mkd --- 7 sesions</option>
                </select>
                    </div>
                  </div>


                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <label asp-for="ClientID" class="control-label"></label>
                        <select asp-for="ClientID" class ="form-control" asp-items="ViewBag.ClientID"></select>
                    </div>
                  </div>


                  <div class="d-flex justify-content-center mx-4 mt-2 mb-1 mb-lg-1">
                    <input type="submit" class="btn btn-primary btn-md" value="Pay Month"></input>
                  </div>
                  <div class="d-flex justify-content-center"><a asp-action="Index">Back to List</a></div>
                  
                  <div class="text-center text-danger alert">
                    @Html.ValidationSummary()
                    </div>

                </form>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="https://www.pngitem.com/pimgs/m/195-1951339_payment-computer-icons-money-logo-payment-terms-icon.png"
                  class="img-fluid" alt="Sample image">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
