@model FitUp.Domain.Models.Reservation

@{
    ViewData["Title"] = "Create";
}


<section class="vh-100">
  <div class="">
    <div class="row d-flex justify-content-center align-items-center mt-5">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-4">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <form class="mx-1 mx-md-4" asp-action="Create">
                  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                  <div class="d-flex flex-row align-items-center mb-4 mt-5">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <label class="control-label">Training</label>
                <select asp-for="TrainingID" class ="form-control" asp-items="ViewBag.TrainingID"></select>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-3">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <label  class="control-label">Client</label>
                            <select asp-for="ClientID" class ="form-control" asp-items="ViewBag.ClientID"></select>                     
                    </div>
                  </div>


                  <div class="d-flex justify-content-center mx-4 mt-5 mb-3 mb-lg-1">
                    <input type="submit" class="btn btn-primary btn-md" value="Reserve Session"></input>
                  </div>
                  <div><a class="d-flex justify-content-center" asp-action="Index">Back to List</a></div>
                  
                  <div class="text-center text-danger alert">
                     @Html.ValidationSummary()
                </div>

                </form>


              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="https://www.kindpng.com/picc/m/79-792430_make-a-reservation-icon-circle-calendar-icon-png.png"
                  class="img-fluid" alt="Sample image">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
