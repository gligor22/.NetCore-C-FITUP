@model FitUp.Domain.DTO.UserLoginDto

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="vh-100">
  <div class="h-custom mt-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
          class="img-fluid" alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1 mt-5">
        <form asp-action="Login" asp-controller="Account" method="post">
        

          <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0"></p>
          </div>

          <!-- Email input -->
          <div class="form-outline mb-4">
            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control form-control-lg" })
            @Html.ValidationMessageFor(m => m.Email)
            <label class="form-label" for="form3Example3"  asp-for="@Model.Email"></label>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-3">
            @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control form-control-lg" })
             @Html.ValidationMessageFor(m => m.Password)
            <label class="form-label" for="form3Example4" asp-for="@Model.Password"></label>
          </div>

          <div class="d-flex justify-content-between align-items-center">
            <!-- Checkbox -->
            <div class="form-check mb-0">
              <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
              <label class="form-check-label" for="form2Example3">
                Remember me
              </label>
            </div>
          </div>

          <div class="text-center text-lg-start mt-4 pt-2">
            <input type="submit" class="btn btn-primary btn-lg"
              style="padding-left: 2.5rem; padding-right: 2.5rem;"></input>
            <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account? <a href="/Account/Register"
                class="link-danger">Register</a></p>
          </div>
          <div class="text-center text-danger alert">
              @Html.ValidationSummary()
          </div>

        </form>
      </div>
    </div>
  </div>
</section>

